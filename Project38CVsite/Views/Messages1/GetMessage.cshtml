@model IEnumerable<Data.Models.Message>

@{
    ViewBag.Title = "GetMessage";
}

<h2>GetMessage</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FromUser.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FromName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Content)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsRead)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.FromUser.FirstName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.FromName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Content)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.IsRead)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
    </td>
</tr>
}

</table>
