@if (User.Identity.IsAuthenticated)
{

    <div class="row" style="border:2px solid black; margin:0 auto; padding:20px ">
        <div hidden class="col-md-10">
            <input type="text" id="txtFromUser" class="form-control" value="@userId" />
        </div>
        <div class="col-md-10">
            Content
        </div>
        <div class="col-md-10">
            <input type="text" id="txtContent" class="form-control" />
        </div>
        <div hidden class="col-md-10">
            <input type="text" id="txtToUser" class="form-control" value="@Model.Id" />
        </div>
        <div class="col-md-10">
            <button class="btn btn-primary" onclick="SendMessageFromUser()">Send Message</button>
        </div>
    </div>

}
else
{
    <div class="row" style="border:2px solid black; margin:0 auto; padding:20px ">
        <div class="col-md-10">
            From Name
        </div>
        <div class="col-md-10">
            <input type="text" id="txtFromName" class="form-control" />
        </div>
        <div class="col-md-10">
            Content
        </div>
        <div class="col-md-10">
            <input type="text" id="txtContent" class="form-control" />
        </div>
        <div hidden class="col-md-10">
            <input type="text" id="txtToUser" class="form-control" value="@Model.Id" />
        </div>
        <div class="col-md-10">
